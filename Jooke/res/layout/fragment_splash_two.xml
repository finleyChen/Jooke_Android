<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashloginll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/inactive_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/jookeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="48dip"
        android:paddingTop="30dp"
        android:text="On Jooke You Can"
        android:textColor="@color/gray_text_darker"
        android:textSize="28sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jookeTextView"
        android:layout_marginLeft="@dimen/default_gap_5x"
        android:layout_marginRight="@dimen/default_gap_5x"
        android:layout_marginTop="35sp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="30dp"
            android:text="1. Create and host events by uploading a music playlist. "
            android:textColor="@color/gray_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_gravity="left"
            android:paddingBottom="30dp"
            android:text="2. Join events and vote on the songs you want to hear from the host&apos;s playlist. "
            android:textColor="@color/gray_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_gravity="left"
            android:paddingBottom="30dp"
            android:text="3. Add songs to the host&apos;s playlist from your device. "
            android:textColor="@color/gray_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_gravity="left"
            android:text="4. Socialize, meet new people and have fun! "
            android:textColor="@color/gray_text"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>